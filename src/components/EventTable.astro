---
import { type Event } from "@/types/Event";
import CardTable from "./CardTable.astro";
import CardTableCell from "./CardTableCell.astro";
import EventCard from "./EventCard.astro";

interface Props {
  events: (Event & { url?: string })[];
  showYear?: boolean;
}

const { events, showYear } = Astro.props;
---

<CardTable>
  {
    events.map((event) => (
      <CardTableCell>
        <EventCard event={event} link={event.url} showYear={showYear} />
      </CardTableCell>
    ))
  }
</CardTable>
