---
import logoSvg from "@/assets/logo.svg";
---

<footer>
  <img
    src={logoSvg.src}
    style={{ aspectRatio: `${logoSvg.width}/${logoSvg.height}` }}
    alt="Queer Coded Logo"
  />
  <div>
    <a href="/press-resources">Press Resources</a>
  </div>
</footer>

<style lang="scss">
  @use "sass:color";
  @use "@/scss/colors";

  footer {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 3rem;
    margin-top: 2rem;
    padding: 2rem;
    background-color: #f9f9f9;
    @media (prefers-color-scheme: dark) {
      background-color: #100000;
    }

    img {
      width: 2rem;
      height: 2rem;
      margin: 0 0.5rem;
    }

    a {
      filter: grayscale(100%);
    }
  }
</style>
